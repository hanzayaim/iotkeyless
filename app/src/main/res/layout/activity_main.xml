<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:id="@+id/llNavbar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:padding="20dp"
        android:orientation="horizontal"
        android:background="@color/blue"
        >

        <LinearLayout
            android:id="@+id/llHomeAndWelcomeUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tvHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOME"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tvWelcomeUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome, [USER]"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:textStyle="normal"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_profile_white"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llTabMenu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="5dp"
        android:layout_below="@+id/llNavbar"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/ivBtnDevice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_device_orange"
            />

        <ImageView
            android:id="@+id/ivBtnFingerprint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_fingerprint_grey"
            />

        <ImageView
            android:id="@+id/ivBtnVehicle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_vehicle_grey"
            />

        <ImageView
            android:id="@+id/ivBtnCamera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_capture_grey"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivBtnConnectToDevice"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/llTabMenu"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_connect_to_device"
        />

    <TextView
        android:id="@+id/tvDeviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivBtnConnectToDevice"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Device Name"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/etDeviceName"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:paddingStart="10dp"
        android:layout_below="@+id/tvDeviceName"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Arduino Uno R3"
        android:background="@color/white"
        />

    <TextView
        android:id="@+id/tvIPAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etDeviceName"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:text="IP Address"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/etIPAddress"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:paddingStart="10dp"
        android:layout_below="@+id/tvIPAddress"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="192.168.1.1"
        android:background="@color/white"
        />

    <Button
        android:id="@+id/btnDisconnect"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_above="@+id/llBottomBar"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/red"
        android:text="DISCONNECT"
        />

    <LinearLayout
        android:id="@+id/llBottomBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@color/blue"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/ivBtnHome"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_home_orange"
            />

        <ImageView
            android:id="@+id/ivBtnHistory"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:src="@drawable/ic_history_white"
            />

        <ImageView
            android:id="@+id/ivBtnSetting"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:src="@drawable/ic_setting_white"
            />

    </LinearLayout>

</RelativeLayout>